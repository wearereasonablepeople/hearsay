{
  "root": true,
  "extends": ["warp/es6", "warp/jsx"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "legacyDecorators": true
    }
  },
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "plugins": [
    "eslint-plugin-react",
    "jest"
  ],
  "rules": {
    "max-len": [2, {"code": 120}],
    "react/jsx-curly-brace-presence": [2, "never"],
    "react/forbid-elements": [2, { "forbid": ["table"] }],
    "react/jsx-tag-spacing": 0,
    "class-methods-use-this": 0
  }
}
